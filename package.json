{
    "name": "voiceapp-data-hub",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "next",
        "dev:inspect": "NODE_OPTIONS='--inspect' next dev",
        "build": "next build",
        "start": "next start",
        "emulators": "firebase emulators:start",
        "test": "jest --no-cache --config=jest.config.js -u",
        "cypress:open": "./node_modules/.bin/cypress open",
        "cypress:run": "CYPRESS_BASE_URL=http://localhost:3000 cypress run",
        "dev:emulator": "USE_FIREBASE_EMULATOR=true export FIRESTORE_EMULATOR_HOST=localhost:8080 && firebase emulators:exec 'yarn dev' --ui --import=./seed",
        "build:emulator": "USE_FIREBASE_EMULATOR=true firebase emulators:exec 'yarn build' --import=./seed",
        "start:emulator": "USE_FIREBASE_EMULATOR=true firebase emulators:exec 'yarn start' --import=./seed",
        "e2e:build-and-start": "yarn build && yarn start",
        "e2e": "start-test e2e:build-and-start 3000 cypress:open",
        "db:export": "firestore-export -a ./service-account.json -b ./seed/firestore.json",
        "db:import": "firestore-import -a ./service-account.json -b ./seed/firestore.json",
        "db:emulator:export": "export FIRESTORE_EMULATOR_HOST=localhost:8080",
        "db:backup": "cp ./seed/firestore.json ./seed/firestore-$(date +%d-%m-%Y-%H-%M).json",
        "generate-fixtures": "node scripts/generate-fixtures-from-firestore-seed.js",
        "prettier": "prettier --write '**/*.(js|json|ts|tsx)' --config prettier.config.js --loglevel error",
        "lint": "next lint",
        "check-types": "tsc",
        "validate": "yarn npm-run-all --parallel test check-types prettier build",
        "prepare": "husky install"
    },
