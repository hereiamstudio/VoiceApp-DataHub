{
    "firestore": [
        {
            "rules": "firestore.rules",
            "indexes": "firestore.indexes.json",
            "target": "default"
        }
    ],
    "functions": {
        "source": "functions",
        "ignore_files": [".runtimeconfig.json"]
    },
    "emulators": {
        "database": {
            "port": 9000
        },
        "firestore": {
            "port": 8080
        },
        "auth": {
            "port": 9099
        },
        "functions": {
            "port": 5001
        },
        "ui": {
            "enabled": true
        },
        "hub": {
            "name": "hub",
            "host": "localhost",
            "port": 4400
        }
    }
}
